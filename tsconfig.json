{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": ["es7", "dom"],
    "declaration": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "es",
    "noUnusedLocals": true,
    "baseUrl": "./src",
    "rootDir": "./src",
    "skipLibCheck": true,
    "importHelpers": true
  },
  "compileOnSave": false
}
